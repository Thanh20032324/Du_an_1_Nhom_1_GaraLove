<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/e4fde1">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTenSP"
            android:textSize="20sp"
            android:text="ten"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_marginTop="10dp"

            android:id="@+id/tvSoLuong"
            android:layout_weight="3"
            android:textSize="17sp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="17sp"
            android:text="17"

            android:layout_marginTop="10dp"
            android:id="@+id/tvTonKho"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gia tien"
            android:textSize="20sp"
            android:layout_marginTop="10dp"

            android:id="@+id/tvGiaTien"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dich vu"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvDichVu"/>

    </LinearLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/ivDeleteSP"
        android:src="@drawable/ic_delete"
        android:layout_marginTop="40dp"/>

</LinearLayout>
