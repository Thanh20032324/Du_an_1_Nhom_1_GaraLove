<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/e4fde1">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTenSP"
            android:textSize="28sp"
            android:text="ten"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_marginTop="10dp"

            android:id="@+id/tvSoLuong"
            android:layout_weight="3"
            android:textSize="17sp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="17sp"
            android:text="17"

            android:layout_marginTop="10dp"
            android:id="@+id/tvTonKho"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gia tien"
            android:textSize="20sp"
            android:layout_marginTop="10dp"

            android:id="@+id/tvGiaTien"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dich vu"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvDichVu"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_weight="5"
        android:layout_marginTop="50dp">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="40dp">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/item_gif"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="-15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_1"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>