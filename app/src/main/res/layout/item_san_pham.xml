<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/e4fde1">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTenSP"

            android:textSize="20sp"
            android:text="ten"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_marginTop="10dp"

            android:id="@+id/tvSoLuong"

            android:textSize="17sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="17"

            android:layout_marginTop="10dp"

            android:id="@+id/tvTonKho"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gia tien"
            android:textSize="20sp"
            android:layout_marginTop="10dp"

            android:id="@+id/tvGiaTien"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dich vu"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvDichVu"/>
    </LinearLayout>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="3"
        android:src="@drawable/ic_delete"
        android:id="@+id/ivDeleteSP"
        android:layout_marginTop="10dp"/>
</LinearLayout>