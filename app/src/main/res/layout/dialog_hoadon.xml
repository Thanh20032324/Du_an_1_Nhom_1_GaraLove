<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_while"
    android:orientation="vertical">
    <TextView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="THÊM PHIẾU MƯỢN"
        android:textSize="26dp"
        android:layout_marginTop="10dp"
        android:id="@+id/dialog_hoadon_tile"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_hoadon_til_mahoadon"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_hoadon_txtmahoadon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã Hóa Đơn"
            android:textSize="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/dialog_spn_tenkhachhang"
        android:layout_width="391dp"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />
    <Spinner
        android:id="@+id/dialog_spn_sanpham"
        android:layout_width="391dp"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày Sửa: "
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/dialog_hoadon_ngaysua"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá Sửa:   "
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/dialog_hoadon_tiensua"
            />
    </LinearLayout>

    <CheckBox
        android:id="@+id/dialog_hoadon_checkBox"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Đã Thanh Toán"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm"
            android:backgroundTint="#ffde03"
            android:textColor="#000000"
            android:id="@+id/dialog_sp_add"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Huỷ"
            android:id="@+id/dialog_sp_cancel"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#B00020"/>
    </LinearLayout>
</LinearLayout>