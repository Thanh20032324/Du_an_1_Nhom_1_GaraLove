<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/drawable_kobogoc"
    android:padding="5dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/temp_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã Khách Hàng: "
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/item_lv_makh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mã khách hàng "
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Khách Hàng: "
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/temp_2"/>
            <TextView
                android:id="@+id/item_lv_tenkh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tên khách hàng"
                android:textSize="18sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Giới Tính: "
                android:textStyle="bold"
                android:id="@+id/temp_3"/>
            <TextView
                android:id="@+id/item_lv_gioitinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới Tính"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Số Điên Thoại: "
                android:textStyle="bold"
                android:id="@+id/temp_4"/>
            <TextView
                android:id="@+id/item_lv_sdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số Điện Thoại"
                android:textStyle="bold"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Địa Chỉ: "
                android:textStyle="bold"
                android:id="@+id/temp_6"/>
            <TextView
                android:id="@+id/item_lv_diachi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textStyle="bold"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Loại Xe: "
                android:textStyle="bold"
                android:id="@+id/temp_5"/>
            <TextView
                android:id="@+id/item_lv_loaixe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loại Xe"
                android:textStyle="bold"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="5">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="40dp">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/item_gif"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="-15dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>